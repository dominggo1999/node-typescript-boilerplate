{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">= 18.16 <19"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "bin": {
    "gct": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "dev": "vite-node --watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc -p tsconfig.release.json && vite build",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "pre-commit": "npx lint-staged",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "preview-coverage": "vite preview --outDir coverage",
    "type-check": "tsc -p tsconfig.release.json",
    "lint": "rome check .",
    "lint:apply": "rome check --apply .",
    "format": "rome format .",
    "format:fix": "rome format --write ."
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/inquirer": "^9.0.3",
    "@types/node": "~18.16.5",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "rimraf": "~5.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rome": "^12.1.2",
    "ts-api-utils": "~0.0.44",
    "tslib": "~2.5",
    "typescript": "~5.0",
    "vite": "^4.3.5",
    "vite-node": "^0.31.0",
    "vite-plugin-dts": "^2.3.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.0"
  },
  "dependencies": {
    "inquirer": "^9.2.2",
    "nanospinner": "^1.1.0",
    "simple-git": "^3.18.0"
  },
  "volta": {
    "node": "18.16.0"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": ["rome check --apply .", "rome format --write ."]
  }
}
